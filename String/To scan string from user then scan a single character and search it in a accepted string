#include<stdio.h>
#include<string.h>
int main()
{
	char str[100], ch;
	int found = 0, i;
	printf("Enter a string: ");
	gets(str);
	printf("Enter a character to search: ");
	scanf("%c" , &ch);
	
	for(i = 0; i < strlen(str); i++) {
		if(str[i] == ch) {
			found = 1;
			break;
		}
	}
	if(found) {
		printf("Character '%c' found in the string at index %d.\n" , ch, i);
	} else {
		printf("Character '%c' not found in the string.\n" , ch, i);
	}
	
	return 0;
}