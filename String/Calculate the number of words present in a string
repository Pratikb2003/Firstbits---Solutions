#include<stdio.h>
#include<string.h>
int main()
{
	char str[100];
	int count = 0;
	int i = 0;
	printf("Enter a string: ");
	gets(str);
	while(str[i] != '\0') {
		if(str[i] == ' ' || str[i] == '\n' || str[i] == '\t') {
			count++;
			while(str[i] == ' ' || str[i] == '\n' || str[i] == '\t') {
				i++;
			}
		} else {
			i++;
		}
	}
	if(strlen(str) > 0) {
		count++;
	}
	printf("Number of words: %d\n" , count);
	return 0;
}