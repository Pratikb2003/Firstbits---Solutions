#include<stdio.h>
#include<string.h>
int main()
{
	char str[100];
	int n, i;
	printf("Enter a string: ");
	gets(str);
	printf("Enter the index to remove (0 to %lu): " , strlen(str) - 1);
	scanf("%d" , &n);
	if( n >= 0 && n < strlen(str)) {
		for(int i = n; i < strlen(str); i++) {
		   str[i] = str[i + 1];
	   }
	   printf("String after removal: %s\n" , str);
   } else {
   	   printf("Invalid index\n");
   }  
   return 0;
}