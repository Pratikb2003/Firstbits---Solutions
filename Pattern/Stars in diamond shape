#include<stdio.h>
int main()
{
	int n = 4;
	//Upper half of pyramid
	for(int i = 1; i <= n; i++) {
		for(int j = 1; j <= i; j++) {
			printf("*");
		}
		printf("\n");
	}
	
	//Lower half of pyramid
	for(int i = n; i >= 1; i--) {
		for(int j = 1; j <= i; j++) {
			printf("*");
		}
		printf("\n");
	}
}