#include<stdio.h>
#include<stdlib.h>
int main()
{
	int n, i;
	printf("Enter size of arrays: ");
	scanf("%d" , &n);
	int *a = (int*) malloc (n * sizeof(int));
	int *b = (int*) malloc (n * sizeof(int));
	int *c = (int*) malloc (n * sizeof(int));
	printf("Enter elements of first array:\n");
	for(int i = 0; i < n; i++) {
		scanf("%d" , &a[i]);
	}
	printf("Enter elements of second array:\n");
	for(int i = 0; i < n; i++) {
		scanf("%d" , &b[i]);
	}
	for(int i = 0; i < n; i++) {
		c[i] = a[i] + b[i];
	}
	printf("Sum array: ");
	for(int i = 0; i < n; i++) {
		scanf("%d" , c[i]);
    }
    free(a);
    free(b);
    free(c);
    return 0;
}