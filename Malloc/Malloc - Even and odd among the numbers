#include<stdio.h>
#include<stdlib.h>
int main()
{
	int n, i;
	printf("Enter size: ");
	scanf("%d" , &n);
	int *arr = (int*) malloc (n * sizeof(int));
	printf("Enter elements:\n");
	for(int i = 0; i < n; i++) {
		scanf("%d" , &arr[i]);
	}
	printf("Even numbers: ");
	for(int i = 0; i < n; i++) {
		if(arr[i] % 2 == 0) 
		printf("%d" , arr[i]);
	}
	printf("Odd numbers: ");
	for(int i = 0; i < n; i++) {
		if(arr[i] % 2 != 0) 
		printf("%d" , arr[i]);
	}
	free(arr);
	return 0;
}