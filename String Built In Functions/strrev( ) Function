    #include <stdio.h>
    #include <string.h>

    // A custom implementation for environments where strrev is not available
    char* custom_strrev(char* str) {
        int length = strlen(str);
        int i, j;
        char temp;
        for (i = 0, j = length - 1; i < j; i++, j--) {
            temp = str[i];
            str[i] = str[j];
            str[j] = temp;
        }
        return str;
    }

    int main() {
        char str[] = "ReverseMe";
        // If strrev is available, use it directly:
        // strrev(str);
        custom_strrev(str); // Using custom implementation
        printf("Reversed string: %s\n", str);
        return 0;
    }