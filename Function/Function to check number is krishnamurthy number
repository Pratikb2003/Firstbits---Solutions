class KrishnamurthyNumber {

    static int factorial(int n) {
        int fact = 1;

        for (int i = 1; i <= n; i++)
            fact *= i;

        return fact;
    }

    static boolean isKrishnamurthy(int num) {
        int sum = 0, temp = num;

        while (temp != 0) {
            sum += factorial(temp % 10);
            temp /= 10;
        }
        return sum == num;
    }

    public static void main(String[] args) {
        int num = 145;

        if (isKrishnamurthy(num))
            System.out.println(num + " is Krishnamurthy Number");
        else
            System.out.println(num + " is Not Krishnamurthy Number");
    }
}