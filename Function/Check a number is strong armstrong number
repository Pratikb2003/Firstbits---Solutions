class StrongArmstrong {

    static int factorial(int n) {
        int fact = 1;
        for (int i = 1; i <= n; i++)
            fact *= i;
        return fact;
    }

    static boolean isArmstrong(int num) {
        int sum = 0, temp = num;
        int digits = String.valueOf(num).length();

        while (temp != 0) {
            int d = temp % 10;
            sum += Math.pow(d, digits);
            temp /= 10;
        }
        return sum == num;
    }

    static boolean isStrong(int num) {
        int sum = 0, temp = num;

        while (temp != 0) {
            sum += factorial(temp % 10);
            temp /= 10;
        }
        return sum == num;
    }

    static boolean isStrongArmstrong(int num) {
        return isArmstrong(num) && isStrong(num);
    }

    public static void main(String[] args) {
        int num = 145;

        if (isStrongArmstrong(num))
            System.out.println(num + " is Strong Armstrong Number");
        else
            System.out.println(num + " is Not Strong Armstrong Number");
    }
}
