class NivenPrime {

    static boolean isPrime(int num) {
        if (num < 2) return false;

        for (int i = 2; i <= Math.sqrt(num); i++) {
            if (num % i == 0)
                return false;
        }
        return true;
    }

    static boolean isNiven(int num) {
        int sum = 0, temp = num;

        while (temp != 0) {
            sum += temp % 10;
            temp /= 10;
        }
        return num % sum == 0;
    }

    static boolean isNivenPrime(int num) {
        return isPrime(num) && isNiven(num);
    }

    public static void main(String[] args) {
        int num = 18;

        if (isNivenPrime(num))
            System.out.println(num + " is Niven Prime");
        else
            System.out.println(num + " is Not Niven Prime");
    }
}