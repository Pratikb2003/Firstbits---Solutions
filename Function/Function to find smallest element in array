class SmallestInArray {

    static int smallest(int[] arr) {
        int min = arr[0];

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] < min)
                min = arr[i];
        }
        return min;
    }

    public static void main(String[] args) {
        int[] a = {45, 12, 8, 30};
        int result = smallest(a);
        System.out.println("Smallest = " + result);
    }
}