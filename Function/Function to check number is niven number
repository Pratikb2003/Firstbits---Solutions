class NivenNumber {

    static boolean isNiven(int num) {
        int sum = 0;
        int temp = num;

        while (temp != 0) {
            sum = sum + (temp % 10);
            temp = temp / 10;
        }

        return num % sum == 0;
    }

    public static void main(String[] args) {
        int num = 18;

        if (isHarshad(num))
            System.out.println(num + " is a Niven Number");
        else
            System.out.println(num + " is Not a Niven Number");
    }
}