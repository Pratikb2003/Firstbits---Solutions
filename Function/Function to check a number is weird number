class WeirdNumber {

    static boolean isAbundant(int num) {
        int sum = 0;

        for (int i = 1; i <= num / 2; i++) {
            if (num % i == 0)
                sum += i;
        }
        return sum > num;
    }

    static boolean isSemiPerfect(int num) {
        int sum = 0;

        for (int i = 1; i <= num / 2; i++) {
            if (num % i == 0) {
                sum += i;
                if (sum == num)
                    return true;
            }
        }
        return false;
    }

    static boolean isWeird(int num) {
        return isAbundant(num) && !isSemiPerfect(num);
    }

    public static void main(String[] args) {
        int num = 70;

        if (isWeird(num))
            System.out.println(num + " is Weird Number");
        else
            System.out.println(num + " is Not Weird Number");
    }
}