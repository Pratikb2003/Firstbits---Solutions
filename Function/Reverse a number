class ReverseNumber {

    static int reverse(int num) {
        int rev = 0;

        while (num != 0) {
            int digit = num % 10;
            rev = rev * 10 + digit;
            num = num / 10;
        }

        return rev;
    }

    public static void main(String[] args) {
        int result = reverse(1234);
        System.out.println("Reverse = " + result);
    }
}