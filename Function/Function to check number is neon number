class NeonNumber {

    static boolean isNeon(int num) {
        int square = num * num;
        int sum = 0;

        while (square != 0) {
            sum = sum + (square % 10);
            square = square / 10;
        }
        return sum == num;
    }

    public static void main(String[] args) {
        int num = 9;

        if (isNeon(num))
            System.out.println(num + " is a Neon Number");
        else
            System.out.println(num + " is Not a Neon Number");
    }
}