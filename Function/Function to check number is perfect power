class PerfectPower {

    static boolean isPerfectPower(int num) {

        for (int i = 2; i * i <= num; i++) {
            int temp = num;

            while (temp % i == 0) {
                temp /= i;
            }

            if (temp == 1)
                return true;
        }
        return false;
    }

    public static void main(String[] args) {
        int num = 16;

        if (isPerfectPower(num))
            System.out.println(num + " is Perfect Power");
        else
            System.out.println(num + " is Not Perfect Power");
    }
}