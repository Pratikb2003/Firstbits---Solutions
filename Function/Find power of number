class LeapYearExample {

    static boolean isLeapYear(int year) {

        if (year % 400 == 0)
            return true;
        else if (year % 100 == 0)
            return false;
        else if (year % 4 == 0)
            return true;
        else
            return false;
    }

    public static void main(String[] args) {
        int year = 2024;

        if (isLeapYear(year))
            System.out.println(year + " is a Leap Year");
        else
            System.out.println(year + " is Not a Leap Year");
    }
}