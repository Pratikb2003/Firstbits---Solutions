class MergeArrays {

    static int[] merge(int[] a, int[] b) {
        int[] c = new int[a.length + b.length];
        int index = 0;

        for (int i : a)
            c[index++] = i;

        for (int i : b)
            c[index++] = i;

        return c;
    }

    public static void main(String[] args) {
        int[] a = {1, 2, 3};
        int[] b = {4, 5, 6};

        int[] result = merge(a, b);

        for (int i : result)
            System.out.print(i + " ");
    }
}