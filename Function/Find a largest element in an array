class LargestInArray {

    static int largest(int[] arr) {
        int max = arr[0];

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > max)
                max = arr[i];
        }
        return max;
    }

    public static void main(String[] args) {
        int[] a = {10, 45, 3, 25};
        int result = largest(a);
        System.out.println("Largest = " + result);
    }
}
