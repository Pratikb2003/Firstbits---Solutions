class EvenRecursive {

    static boolean isEven(int num) {

        if (num == 0)
            return true;

        if (num == 1)
            return false;

        return isEven(num - 2);
    }

    public static void main(String[] args) {
        int num = 14;

        if (isEven(num))
            System.out.println(num + " is Even");
        else
            System.out.println(num + " is Odd");
    }
}
