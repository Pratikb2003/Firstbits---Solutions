#include <stdio.h>

void countEvenOdd(int arr[], int n, int *even, int *odd) {
    *even = 0;
    *odd = 0;

    for(int i = 0; i < n; i++) {
        if(arr[i] % 2 == 0)
            (*even)++;
        else
            (*odd)++;
    }
}

int main() {
    int a[7] = {10, 15, 22, 33, 44, 55, 60};
    int evenCount, oddCount;

    countEvenOdd(a, 7, &evenCount, &oddCount);

    printf("Even = %d\n", evenCount);
    printf("Odd = %d\n", oddCount);

    return 0;
}