#include<stdio.h>
struct Distance {
	int feet;
	float inch;
};
void store(struct Distance *d) {
	printf("Enter feet and inches: ");
	scanf("%d %f" , &d->feet, &d->inch);
}
void display(struct Distance d) {
	printf("\n--- Distance ---\n");
	scanf("%d feet %.2f inches\n" , d.feet, d.inch);
}
void main() {
	struct Distance d;
	store(&d);
	display(d);
}