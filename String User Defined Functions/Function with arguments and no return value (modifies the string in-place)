#include <stdio.h>
#include <string.h>

void reverse_string(char *str);

int main() {
    char word[] = "Programming";
    printf("Before reverse: %s\\n", word);
    
    reverse_string(word); 
    printf("After reverse:  %s\\n", word);
    
    return 0;
}

void reverse_string(char *str) {
    int length = strlen(str);
    int i, j;
    char temp;

    for (i = 0, j = length - 1; i < j; i++, j--) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}
