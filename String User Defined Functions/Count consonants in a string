#include <stdio.h>

int countConsonants(char str[])
{
    int i = 0, count = 0;

    while (str[i] != '\0')
    {
        if ((str[i] >= 'a' && str[i] <= 'z') ||
            (str[i] >= 'A' && str[i] <= 'Z'))
        {
            if (!(str[i] == 'a' || str[i] == 'e' || str[i] == 'i' ||
                  str[i] == 'o' || str[i] == 'u' ||
                  str[i] == 'A' || str[i] == 'E' || str[i] == 'I' ||
                  str[i] == 'O' || str[i] == 'U'))
            {
                count++;
            }
        }
        i++;
    }
    return count;
}

int main()
{
    char str[50];
    printf("Enter a string: ");
    gets(str);

    printf("Consonants = %d", countConsonants(str));
    return 0;
}