#include <stdio.h>
#include <string.h> // Required for strlen, used here for simplicity in finding end

// Function prototype
void string_concatenate(char *dest, char *src);

int main() {
    char str1[50] = "First part, "; // Must have enough space
    char str2[] = "second part.";

    string_concatenate(str1, str2);
    printf("Concatenated string: %s\n", str1);
    return 0;
}

// Function definition
void string_concatenate(char *dest, char *src) {
    // Find the end of the destination string
    int dest_len = strlen(dest);
    int i = 0;

    // Append source characters to destination
    while (src[i] != '\0') {
        dest[dest_len + i] = src[i];
        i++;
    }
    dest[dest_len + i] = '\0'; // Add null terminator at the end
}
