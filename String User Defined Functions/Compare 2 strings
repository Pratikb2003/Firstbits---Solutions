#include <stdio.h>

int string_compare(char *str1, char *str2);

int main() {
    char s1[] = "apple";
    char s2[] = "apple";
    char s3[] = "banana";

    if (string_compare(s1, s2) == 0) {
        printf("'%s' and '%s' are equal.\n", s1, s2);
    }
    if (string_compare(s1, s3) != 0) {
        printf("'%s' and '%s' are different.\n", s1, s3);
    }
    return 0;
}

int string_compare(char *str1, char *str2) {
    int i = 0;
    while (str1[i] == str2[i] && str1[i] != '\0' && str2[i] != '\0') {
        i++;
    }
    return str1[i] - str2[i];
}