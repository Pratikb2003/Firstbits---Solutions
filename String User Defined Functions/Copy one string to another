#include <stdio.h>

// Function prototype
void string_copy(char *dest, char *src);

int main() {
    char source[] = "Copy this text";
    char destination[50]; // Ensure destination array is large enough

    string_copy(destination, source);
    printf("Copied string: %s\n", destination);
    return 0;
}

// Function definition
void string_copy(char *dest, char *src) {
    int i = 0;
    while (src[i] != '\0') {
        dest[i] = src[i];
        i++;
    }
    dest[i] = '\0'; // Manually add the null terminator
}
