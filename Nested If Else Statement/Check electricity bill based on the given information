#include <stdio.h>

void main() {
    int unit;
    printf("Enter consumed units: ");
    scanf("%d", &unit);

    if(unit <= 100) {
        printf("Bill = 0rs");
    } else {
        if(unit <= 200)
            printf("Bill = %d", (unit - 100) * 5);
        else if(unit <= 300)
            printf("Bill = %d", 500 + (unit - 200) * 7);
        else
            printf("Bill = %d", 1200 + (unit - 300) * 10);
    }
}