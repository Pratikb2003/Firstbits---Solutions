#include<stdio.h>
int main()
{
	int num, i, j, sum_divisors;
	
	printf("Enter the upper limit (n): ");
	scanf("%d" , &num);
	
	printf("The perfect numbers between 1 and %d are: \n" , num);
	
	for(int i = 1; i <= num ; i++) {
		sum_divisors = 0;
		
		for(int j = 1; j < i ; j++) {
			if(i % j == 0) {
				sum_divisors = sum_divisors + j;
			}
		}
		
		if(sum_divisors == i && i != 0) {
			printf("%d\n" , i);
		}
	}
}