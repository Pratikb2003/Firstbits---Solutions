#include<stdio.h>
int main()
{
	int num = 145;
	int temp = num;
	int sum = 0;
	int digit, fact;
	
	while(temp > 0) {
		digit = temp % 10;
		fact = 1;
		
		//Calculate factorial of the digit
		int i = 1;
		while(i <= digit) {
			fact = fact * i;
			i++;
		}
		sum = sum + fact;
		temp = temp / 10;
	}
	
	if(sum == num) {
		printf("%d is a strong number\n" , num);
	} else {
		printf("%d is not a strong number\n" , num);
	}
}