#include<stdio.h>
int main()
{
	int arr[100], size, i, temp;
	printf("Enter the size of the array: ");
	scanf("%d" , &size);
	for(int i = 0; i < size; i++) {
		scanf("%d" , arr[i]);
	}
	for(int i = 0; i < size / 2; i++) {
		temp = arr[i];
		arr[i] = arr[size - 1 - i];
		arr[size - 1 - i] = temp;
	}
	printf("The reversed array is: ");
	for(int i = 0; i < size; i++) {
		scanf("%d" , arr[i]);
	}
	printf("\n");
}